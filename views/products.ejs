<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Products</title>
    <link rel="stylesheet" type="text/css" href="./style.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">

    <style>
        .quantity-controls {
            display: flex;
            align-items: center;
        }

        .quantity-button {
            padding: 4px 8px;
            height: 24px;
            /* Adjust height as needed */
            font-size: 14px;
            /* Adjust font size */
        }

        .quantity-input {
            width: 40px;
            height: 24px;
            /* Adjust height to match buttons */
            text-align: center;
            font-size: 14px;
            /* Adjust font size */
            border: 1px solid #ccc;
            /* Optional: Add border for input */
            border-radius: 4px;
            /* Optional: Add border radius */
        }
    </style>

</head>


<body>
    <div class="container" style="margin-left: 80px;">
        <br><br>

        <% if (!session.userId) { %>
            <div class="row row-cols-1 row-cols-md-3 g-4">
                <% products.forEach(product=> { %>
                    <div class="col">
                        <div class="card product-item shadow-sm">
                            <div class="item-img" style="display: flex; justify-content: center;">
                                <img src="<%= product.img %>" class="card-img-top" style="height: 300px;"
                                    alt="<%= product.name %>">
                            </div>
                            <div class="card-body">
                                <div style="display: flex; align-items: center; justify-content: space-between; margin-bottom: 10px;">
                                    <h5 class="card-title">
                                        <%= product.name %>
                                    </h5>
                                    <div class="quantity-controls">
                                        <input style=" width: 80px; border-color: pink;" type="number"
                                            id="quantity-<%= product._id %>" name="quantity" value="1" min="1"
                                            class="quantity-input">
                                    </div>
                                </div>
                                <div class="d-flex justify-content-between  mb-3">
                                    <p class="mb-0">Rs. <%= product.price %>
                                    </p>
                                    <a href="/user/login"><button class="add-to-cart-btn"><i class="fas fa-plus"></i>
                                            Your Bag</button></a>
                                </div>

                                <div class="d-flex justify-content-between align-items-center">

                                    <select name="sharedCartId" id="sharedCartId" class="shared-cart-dropdown">
                                        <option>No group!</option>
                                    </select>
                                    <a href="/user/login"><button class="add-to-cart-btn"><i class="fas fa-plus"></i>
                                            Shared Bag</button></a>

                                </div>

                            </div>
                        </div>
                    </div>
                    <% }) %>
            </div>

            <% } else { %>
                <div class="row row-cols-1 row-cols-md-3 g-4">
                    <% products.forEach(product=> { %>
                        <div class="col">
                            <div class="card product-item shadow-sm">
                                <div class="item-img" style="display: flex; justify-content: center;">
                                    <img src="<%= product.img %>" class="card-img-top" style="height: 300px;"
                                        alt="<%= product.name %>">
                                </div>
                                <div class="card-body">
                                    <div style="display: flex; align-items: center; justify-content: space-between; margin-bottom: 10px;">
                                        <h5 class="card-title">
                                            <%= product.name %>
                                        </h5>
                                        <div class="quantity-controls">
                                            <input style=" width: 80px; border-color: pink;" type="number"
                                                id="quantity-<%= product._id %>" name="quantity" value="1" min="1"
                                                class="quantity-input">
                                        </div>
                                </div>
                                    
                                    <div class="d-flex justify-content-between mb-3">
                                        <p class="mb-0">Rs. <%= product.price %></p>
                                        <form action="/product/add-to-personal-cart/<%= product._id %>" method="POST">
                                            <input type="hidden" id="hidden-quantity-<%= product._id %>" name="quantity" value="1">
                                            <button type="submit" class="add-to-cart-btn"><i class="fas fa-plus"></i> Your Bag</button>
                                        </form>
                                    </div>
                                    <div class="d-flex justify-content-between align-items-center">
                                            <form action="/product/add-to-shared-cart/<%= product._id %>" method="post">
                                                <label for="sharedCartId"></label>
                                                <% if(shared && shared.length){ %>
                                                  <select name="sharedCartId" id="sharedCartId" class="shared-cart-dropdown">
                                                    <% shared.forEach(function(cart){ %>
                                                        <option value="<%= cart._id %>">
                                                            <%= cart.name %>
                                                        </option>
                                                        <% }); %>
                                                </select>
                                                     <input type="hidden" id="hidden-quantity-<%= product._id %>" name="quantity" value="1">
                                                     <button type="submit" class="add-to-cart-btn"><i class="fas fa-plus"></i> Shared Bag</button>
                                            </form>
                                            <% } else { %>
                                                <select name="sharedCartId" id="sharedCartId"
                                                    class="shared-cart-dropdown">
                                                    <option>No group!</option>
                                                </select>
                                                <input type="hidden" id="hidden-quantity-<%= product._id %>"
                                                    name="quantity" value="1">
                                                <a><button
                                                        class="add-to-cart-btn"><i class="fas fa-plus"></i> Shared
                                                        Bag</button></a>
                                                <% } %>
                                    </div>

                                </div>
                            </div>
                        </div>

                        <% }) %>
                </div>
                <% } %>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/js/all.min.js"></script>
    <script>
        function increaseQuantity(productId) {
            const quantityInput = document.getElementById('quantity-' + productId);
            quantityInput.value = parseInt(quantityInput.value) + 1;
        }

        function decreaseQuantity(productId) {
            const quantityInput = document.getElementById('quantity-' + productId);
            if (parseInt(quantityInput.value) > 1) {
                quantityInput.value = parseInt(quantityInput.value) - 1;
            }
        }

        function syncQuantity(productId, isShared = false) {
            const quantityInput = document.getElementById('quantity-' + productId);
            const hiddenQuantityInput = isShared
                ? document.getElementById('hidden-quantity-shared-' + productId)
                : document.getElementById('hidden-quantity-' + productId);
            hiddenQuantityInput.value = quantityInput.value;
        }
    </script>
</body>

</html>